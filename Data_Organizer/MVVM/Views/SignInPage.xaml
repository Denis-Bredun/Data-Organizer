<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Data_Organizer.MVVM.ViewModels"
             xmlns:controls="clr-namespace:Data_Organizer.MVVM.Views.Controls"
             xmlns:skia="clr-namespace:SkiaSharp.Extended.UI.Controls;assembly=SkiaSharp.Extended.UI"
             x:DataType="vm:SignInViewModel"
             x:Class="Data_Organizer.MVVM.Views.SignInPage"
             Style="{StaticResource PageStyle}">

    <Grid RowDefinitions="0.5*, 1*, 1*, 1*, 1*, 1*, 0.6*, 1*">
        <Label Grid.Row="0"
               Text="Авторизація"
               Style="{StaticResource PageTitleStyle}"/>

        <controls:LabeledEntry 
            Grid.Row="1"
            LabelText="Пошта"
            EntryText="{Binding Email, Mode=TwoWay}"/>

        <controls:LabeledEntry 
            Grid.Row="2"
            LabelText="Пароль"
            EntryText="{Binding Password, Mode=TwoWay}"
            IsPassword="True"/>

        <Button 
            Grid.Row="4"
            Style="{StaticResource SignInButtonStyle}"
            VerticalOptions="Start"
            Margin="30,0,30,0"
            Text="Авторизуватись"
            Command="{Binding SignInCommand}"/>

        <VerticalStackLayout 
            Grid.Row="5" 
            Margin="25,0,25,30">
            <Button
                Text="Немає акаунту? Зареєструйтесь."
                Style="{StaticResource LinkButtonStyle}"
                Command="{Binding NavigateToSignUpPageCommand}"/>

            <Button
                Text="Увійти як гість"
                Style="{StaticResource LinkButtonStyle}"
                Command="{Binding NavigateToMainPageCommand}"/>
        </VerticalStackLayout>

        <Grid 
            Grid.RowSpan="8" 
            IsVisible="{Binding IsLoading, Mode=TwoWay}" 
            Style="{StaticResource TransparentGridStyle}">
            <skia:SKLottieView Style="{StaticResource LoadingAnimationStyle}" />
        </Grid>
    </Grid>
    
</ContentPage>