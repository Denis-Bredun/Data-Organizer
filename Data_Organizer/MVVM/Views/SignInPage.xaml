<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Data_Organizer.MVVM.ViewModels.SignInViewModel"
             xmlns:skia="clr-namespace:SkiaSharp.Extended.UI.Controls;assembly=SkiaSharp.Extended.UI"
             x:DataType="vm:SignInViewModel"
             x:Class="Data_Organizer.MVVM.Views.SignInPage"
             Style="{StaticResource PageStyle}">

    <Grid RowDefinitions="0.5*, 0.8*, 0.8*, 0.8*, 0.5*, 0.4*, 0.4*, 0.4*, 0.5*, 0.5*">
        <Label Grid.Row="0"
               Text="Авторизація"
               Style="{StaticResource PageTitleStyle}"/>

        <Grid Grid.Row="1" RowDefinitions="*,*" Margin="30,0,30,0">
            <Label 
                Text="Пошта"
                Style="{StaticResource EntriesTitleStyle}"/>
            <Frame Grid.Row="1" 
                   Style="{StaticResource EntriesFrameStyle}">
                <Entry 
                    Style="{StaticResource EntryStyle}"
                    Text="{Binding Email, Mode=TwoWay}"/>
            </Frame>
        </Grid>

        <Grid Grid.Row="2" RowDefinitions="*,*" Margin="30,0,30,0">
            <Label 
                Text="Пароль"
                Style="{StaticResource EntriesTitleStyle}"/>
            <Frame Grid.Row="1" 
                   Style="{StaticResource EntriesFrameStyle}">
                <Entry 
                    Style="{StaticResource EntryStyle}"
                    IsPassword="True"
                    Text="{Binding Password, Mode=TwoWay}"/>
            </Frame>
        </Grid>

        <Button 
            Grid.Row="4"
            Style="{StaticResource BlueButtonStyle}"
            VerticalOptions="Start"
            Margin="30,0,30,0"
            Text="Авторизуватись"
            Command="{Binding SignInCommand}"/>
        
        <Button Grid.Row="5"
                Text="Забули пароль? Натисність сюди."
                Style="{StaticResource LinkButtonStyle}"
                Command="{Binding NavigateToResetPasswordPageCommand}"/>

        <Button Grid.Row="6"
                Text="Немає акаунту? Зареєструйтесь."
                Style="{StaticResource LinkButtonStyle}"
                Command="{Binding NavigateToSignUpPageCommand}"/>

        <Button Grid.Row="7"
                Text="Увійти як гість"
                Style="{StaticResource LinkButtonStyle}"
                Command="{Binding NavigateToMainPageCommand}"/>

        <Button Grid.Row="8"
                Margin="10"
                WidthRequest="260"
                Text="Служба підтримки"
                Style="{StaticResource BaseButtonStyle}"
                Command="{Binding NavigateToSupportPageCommand}"/>

        <Grid Grid.RowSpan="9"
              IsVisible="{Binding IsLoading, Mode=TwoWay}" 
              Style="{StaticResource TransparentGridStyle}">
            <skia:SKLottieView Style="{StaticResource LoadingAnimationStyle}" />
        </Grid>
    </Grid>
    
</ContentPage>