<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Data_Organizer.MVVM.Views.MyTabbedPage"
             xmlns:local="clr-namespace:Data_Organizer.MVVM.Views"
             xmlns:android="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.AndroidSpecific;assembly=Microsoft.Maui.Controls"
             android:TabbedPage.ToolbarPlacement="Bottom"
             android:TabbedPage.IsSmoothScrollEnabled="True"
             Title="MyTabbedPage"
             BackgroundColor="{StaticResource PageBackgroundColor}"
             BarBackgroundColor="{StaticResource BarBackgroundColor}"
             UnselectedTabColor="{StaticResource UnselectedTabColor}"
             SelectedTabColor="{StaticResource SelectedTabColor}">

    <local:MainPage/>
    <local:SavedNotesPage/>
    <local:SettingsPage/>

</TabbedPage>